@model Phenicienn.Models.AdminUser.AdminUser

@{
    ViewData["Title"] = "User - Details";
}

<h2 class="titles mb-5">Details</h2>

<div>
    <h4>User</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.UserName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UserName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.active)
        </dt>
        <dd class="col-sm-10">
            @if (Model.active)
            {
                @Html.Display("Active");
            }
            else
            {
                @Html.Display("Not Active");
            }
        </dd>
        @if (Model.active && Model.Restaurant != 0)
        {
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Restaurant)
            </dt>
            <dd class="col-sm-10">
                <a asp-controller="Restaurants" asp-action="Details" asp-route-id="model.Restaurant">@ViewBag.RestaurantName</a>
            </dd>
        }
    </dl>
</div>
<div>
    <a asp-area="Manage" asp-controller="Users" asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-area="Manage" asp-controller="Users" asp-action="Index">Back to List</a>
</div>
