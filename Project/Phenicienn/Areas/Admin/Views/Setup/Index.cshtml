
@model Phenicienn.Models.Restaurant
@{
    ViewData["Title"] = "Index";
}

@if (ViewData.ContainsKey("ErrorMessage"))
{
    <div class="card border-right border-left alert-danger row">
        <div class="col-10">
            @ViewData["ErrorMessage"];
        </div>
    </div>
}

<h2 class="titles mb-5">Setup</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Index" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Index" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

