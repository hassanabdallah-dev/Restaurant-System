@model Phenicienn.Models.Category

@{
    ViewData["Title"] = "Categorie - Edit";
}

    <h2 class="titles mb-5">Edit</h2>

<h4>Category</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form enctype="multipart/form-data" id="editform" asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="CategoryId" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div id="imageupload" class="form-group">
                <label asp-for="Image" class="control-label"></label>
                <div id="fileupload" class="custom-file">
                    <input name="Image" type="file" class="custom-file-input" id="customFile">
                    <label class="custom-file-label" for="customFile">Choose file</label>
                </div>
                <span asp-validation-for="Image" class="text-danger"></span>
            </div>
            <button class="btn btn-primary mb-3" id="change">Change</button>
            <div id="image">
                <img class="mb-3" src="/@Model.ImagePath" width="200" height="200" />
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-area="Admin" asp-controller="Categories" asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
<script src="~/js/admin.js"></script>
}
