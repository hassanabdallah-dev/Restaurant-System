@model Phenicienn.Models.Category

@{
    ViewData["Title"] = "Categorie - Details";
}

    <h2 class="titles mb-5">Details</h2>

<div>
    <h4>Category</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
